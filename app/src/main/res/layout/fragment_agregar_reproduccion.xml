<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".views.FragmentAgregarReproduccion">

    <!-- El ScrollView ahora ocupa toda la pantalla -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="24dp"
            android:paddingEnd="24dp">

            <!-- Contenido del formulario -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar Toro"
                android:textSize="15sp"
                style="@style/letra_base" />

            <Spinner
                android:id="@+id/spinnerIdToro"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/spin_disenio"
                style="@style/MiEstiloEditText"
                tools:prompt="Seleccionar Toro" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                android:text="Seleccionar Vaca"
                style="@style/letra_base" />

            <Spinner
                android:id="@+id/spinnerIdVaca"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/spin_disenio"
                style="@style/MiEstiloEditText"
                tools:prompt="Seleccionar Vaca" />

            <!-- Campo Fecha de Gestión (como lo hiciste) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:hintTextColor="#774833"
                android:textColorHint="#A0A0A0"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:hint="Fecha de gestión">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editFechaGestion"
                    style="@style/letra_base"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/txt_disenio"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:padding="8dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Fecha de Nacimiento (MODIFICADO) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:hintTextColor="#774833"
                android:textColorHint="#A0A0A0"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:hint="Fecha de nacimiento">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editFechaNacimiento"
                    style="@style/letra_base"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/txt_disenio"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:padding="8dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Crías Machos (MODIFICADO) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:hintTextColor="#774833"
                android:textColorHint="#A0A0A0"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:hint="Crías machos">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editCriasMachos"
                    style="@style/letra_base"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/txt_disenio"
                    android:inputType="number"
                    android:padding="8dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Crías Hembras (MODIFICADO) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:hintTextColor="#774833"
                android:textColorHint="#A0A0A0"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:hint="Crías hembras">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editCriasHembras"
                    style="@style/letra_base"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/txt_disenio"
                    android:inputType="number"
                    android:padding="8dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Contenedor de botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCancelarH"
                    style="@style/letra_base_btn"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_seleccion3"
                    android:minHeight="48dp"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAgregarReproduccion"
                    style="@style/letra_base_btn"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_seleccion2"
                    android:minHeight="48dp"
                    android:text="Agregar"
                    android:textAllCaps="false" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>